---
import type { HTMLAttributes } from "astro/types";

type Props = HTMLAttributes<"a"> & { href: string };

const { href, class: className, ...props } = Astro.props;
const pathname = Astro.url.pathname.replace(import.meta.env.BASE_URL, "");
const isActive = href === pathname || (href === "/" && (pathname === "/" || pathname === ""));
---

<a
	href={href}
	class:list={[
		"text-stone-600 hover:text-stone-900 transition-colors text-sm font-medium",
		{ "text-stone-900 font-semibold": isActive },
		className,
	]}
	{...props}
>
	<slot />
</a>
